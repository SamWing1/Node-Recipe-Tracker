<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <p>Welcome to <%= title %>
  </p>
  <ul>
    <% if (user) { %>
      <li><a href="/">Main</a></li>
      <li><a href="/recipe/new">Add Recipe</a></li>
      <li><a href="/ingredient/new">Add Ingredient</a></li>
      <li><a href="/logout">Log Out</a></li>
      
  </ul>
  <h1>Recipe List</h1>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Minutes to Prepare</th>
        <th>Show More</th>
      </tr>
      <tbody>
        <% recipe.forEach(function(r) { %>
          <tr>
            <td><%= r.name %></td>
            <td><%= r.prepTime %></td>
            <td><a href="/recipe/<%= r._id %>">DETAILS</a></td>
            <td><form action="/recipe/<%= r._id %>?_method=DELETE"
              id="delete-form" method="POST">
              <button type="submit">X</button></form></td>
        </tr>
          <% }); %>
      </tbody>
    </thead>

    <% } else { %>
        <li><a href="/auth/google">Log In</a></li>
        <% } %>
</body>

</html>